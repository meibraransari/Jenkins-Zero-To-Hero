// Environment Variables
// Demonstrates using environment variables in pipeline
pipeline {
    agent any
    
    environment {
        APP_ENV = 'production'
        APP_VERSION = '1.0.0'
        DATABASE_URL = 'jdbc:mysql://localhost:3306/mydb'
    }
    
    stages {
        stage('Print Env') {
            steps {
                echo "Environment: ${APP_ENV}"
                echo "Version: ${APP_VERSION}"
                echo "Database: ${DATABASE_URL}"
                echo "Job Name: ${JOB_NAME}"
                echo "Build Number: ${BUILD_NUMBER}"
            }
        }
        
        stage('Build') {
            steps {
                echo "Building version ${APP_VERSION} for ${APP_ENV}"
            }
        }
    }
}
