// Tools Configuration (Maven)
// Demonstrates configuring tools in pipeline
//
// REQUIRED JENKINS PLUGINS:
// - Pipeline Maven Integration Plugin (pipeline-maven)
// - Maven Integration Plugin (maven-plugin)
//
// ADDITIONAL SETUP:
// - Configure Maven installation in Global Tool Configuration (Manage Jenkins > Tools)
// - Name should match 'Maven3' or update in pipeline
//
pipeline {
    agent any
    
    tools {
        maven 'Maven3'
    }
    
    stages {
        stage('Verify Tools') {
            steps {
                sh 'mvn --version'
                sh 'java -version'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean compile'
                echo 'Build completed with Maven'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
                echo 'Tests executed'
            }
        }
        
        stage('Package') {
            steps {
                sh 'mvn package'
                echo 'Application packaged'
            }
        }
    }
}
